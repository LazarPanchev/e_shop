{% extends 'base.html.twig' %}

{% block main %}
    <h1 class="text-center">Tyres</h1>
    <div class="list-group">
        <div class="list-group-item">
            <!--Heading with class .list-group-item-heading-->
            <div>
                {# @var tyre \AppBundle\Entity\Tyre #}
                <h3 class="text-warning">{{ tyre.make }} {{ tyre.model }}</h3>
                <h4 class="list-group-item-heading text-success">{{ tyre.width }}/{{ tyre.height }}
                    R{{ tyre.diameter }} {{ tyre.speedIndex }} {{ tyre.loadIndex }}</h4>
                    <img class="media-object img-rounded img-responsive" width="100px" height="200px%"
                         src="{{ asset('uploads/images/tyres/' ~ tyre.image) }}"
                         alt="placehold.it/350x250">
                <span class="price text-danger" style="margin-left: 600px;">
                    Price: {{ tyre.price }} lv.
                            Quantity: {{ tyre.quantity }} left.
                </span>
            </div>
            <!--Paragraph with class .list-group-item-text -->
            <p class="list-group-item-text">Viewed: {{ tyre.viewCount }}</p>
            <p class="list-group-item-text">Seller: {{ tyre.seller.fullName }}</p>
            <p class="list-group-item-text">Category: {{ tyre.category.name }}s</p>
        </div>
        {% if app.User() and (app.getUser().isAdmin() or app.getUser().isSeller(tyre)) %}
            <a href="{{ path('tyres_edit', {'id': tyre.id}) }}">
                <button type="button" class="btn btn-primary btn-lg btn-block"> Edit</button>
            </a>
                <button type="button" class="btn btn-primary btn-lg btn-block"  data-toggle="modal" data-target="#modalDelete"  role="button"> Delete</button>
        {% else %}
            <button type="button" class="btn btn-primary btn-lg btn-block"> Buy Now</button>
        {% endif %}
        <hr>
    </div>
    <div class="form-group">
        <a class="btn btn-primary" href="{{ path('tyres_view_all') }}">Back</a>
        <button id="btnComment" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalForm"
                role="button">
            Add feedback for the product
        </button>
    </div>

    <div class="container">
        {% for comment in comments %}
        <div class="card border-primary mb-3">
            <div class="post-heading">
                <div class="pull-left image">
                    {#<img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar"#}
                         {#alt="user profile image">#}
                    <img class="img-circle avatar" src="{{ asset('uploads/images/avatars/' ~ comment.author.avatar) }}"
                         alt="placehold.it/350x250" width="100" height="100">
                </div>
                <div class="pull-left meta">
                    <div class="title h5">
                        {#@var comment \AppBundle\Entity\Comment#}
                        <a href="#"><b>{{ comment.author.fullName }}</b></a>
                        write:
                    </div>
                </div>
            </div>
            <h6 class="text-muted time">{{ comment.dateAdded()|date('F jS \\a\\t g:ia', 'Europe/Sofia') }}</h6>
            <div class="post-description">
                <p>{{ comment.content }}</p>
            </div>
        </div>

    {% endfor %}
    </div>



    <div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Write message</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <form method="post" action="{{ path('add_comment', {'tyreId': tyre.id}) }}" class="md-form mb-5">
                        <i class="fa fa-envelope prefix grey-text"></i>
                        <label data-error="wrong" data-success="right" for="comment_content">Message</label>
                        <input type="text" name="comment[content]" id="comment_content" class="form-control validate"/>
                        <div class="modal-footer d-flex justify-content-center">
                            <input type="submit" class="btn btn-primary" value="Add Message"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Are you sure you want to Delete this item?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <form method="post" action="{{ path('tyres_delete', {'id': tyre.id}) }}" class="md-form mb-5" name="delete">
                        <i class="fa fa-envelope prefix grey-text"></i>
                        <label data-error="wrong" data-success="right" for="comment_content">
                            {{ tyre.make }} {{ tyre.model }} {{ tyre.width }}/{{ tyre.height }} R{{ tyre.diameter }}
                            <div>
                                Added on: {{ tyre.createDate|date('F jS \\a\\t g:ia', 'Europe/Sofia') }}
                            </div>
                        </label>

                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn-primary close" data-dismiss="modal" aria-label="Close">Cancel</button>
                            <input type="submit" class="btn btn-danger" value="Delete"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script>
        $('#btnComment').on('click', function (event) {
            event.preventDefault();
            let commentConteiner = $('#comments');
            commentConteiner.append(form);
            commentConteiner.toggle();
        });
    </script>
{% endblock %}