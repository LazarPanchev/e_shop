<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}E_SHOP{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/_variables.scss') }}">
        <link rel="">
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
        <script>
            setTimeout(function () {
                $('#success').fadeOut();
            }, 3000);
            setTimeout(function () {
                $('#error').fadeOut();
            }, 3000)
        </script>
    {% endblock %}
</head>

<body>
<header><!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">E_SHOP</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('homepage') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('homepage') }}">Sell product <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('homepage') }}">Add promotion <span class="sr-only">(current)</span></a>
                </li>

            </ul>

            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
</header>
<main>
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-dismissible alert-success" id="success">
            <button type="button" class="close" data-dismiss="alert"></button>
            <strong>Well done! {{ msg }}</strong>
        </div>
    {% endfor %}

    {% for msg in app.session.flashBag.get('error') %}
        <div class="alert alert-dismissible alert-danger" id="error">
            <button type="button" class="close" data-dismiss="alert"></button>
            <strong>Oh snap! {{ msg }}</strong>
        </div>
    {% endfor %}

    <div class="container">
        {% block main %}{% endblock %}
    </div>
</main>

<footer>
    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <div class="navbar-header">
                <div>
                    <a href="{{ path('homepage') }}">Contacts</a>
                </div>
            <div>
                <a href="{{ path('homepage') }}">About</a>
            </div>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
            </div>

            <p class="navbar-text navbar-right">E_Shop &copy; 2018</p>
        </div>
    </nav>
</footer>


</body>
</html>
